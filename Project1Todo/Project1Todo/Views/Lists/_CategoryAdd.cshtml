@model Project1Todo.Models.Category

@using (Ajax.BeginForm("AJAXCreate", "Categories", new AjaxOptions
{
    //what ajax does with results
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    UpdateTargetId = "categoryTableDiv"
}))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { })
        @Html.AntiForgeryToken()
        <div>
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Item" class="btn btn-default" />
        </div>
    </div>

}
