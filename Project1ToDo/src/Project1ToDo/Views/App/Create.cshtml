@model Project1ToDo.ViewModels.CreateViewModel
@{
    ViewBag.Title = "Create List";
}
@section scripts{
    <script src="~/lib/jquery-validate/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
<h2>List - @ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }

            <div>
                <div class="form-group">
                    <label asp-for="ListName">List Name</label>
                    <input asp-for="ListName" class="form-control" />
                    <span asp-validation-for="ListName" class="text-muted"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-muted"></span>
                </div>
            </div>

            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>